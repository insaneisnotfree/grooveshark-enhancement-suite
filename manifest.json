{
      "name": "Grooveshark Enhancement Suite"
    , "description": "A suite of handy modules that improve the Grooveshark experience"
    , "version": "1.5"
    , "background_page": "background/background.html"
    , "permissions": [
              "tabs"
            , "http://*.grooveshark.com/*"
            , "http://lyrics.wikia.com/*"
        ]
    , "page_action":
        {
              "default_icon": "icons/16.png"
            , "default_title": "Open GES Menu"
        }
    , "content_scripts": [
        {
              "matches": ["http://*.grooveshark.com/*"]
            , "js": [
                  "lib/jquery.js"
                , "contentscript/buffer.js"
                , "contentscript/events.js"
                , "contentscript/ui.js"
                , "contentscript/messages.js"
                , "contentscript/modules.js"
                , "modules/shortcuts/main.js"
                , "modules/dupe_delete/main.js"
                , "modules/lyrics/main.js"
                , "contentscript/db.js"
                , "contentscript/ges.js"
                , "contentscript/contentscript.js"
            ]
            , "css": [
                  "contentscript/style.css"
                , "modules/shortcuts/style.css"
            ]
        }
    ]
    , "icons":
        {
              "48": "icons/48.png"
            , "128": "icons/128.png"
        }
}
