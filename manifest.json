{
      "name": "Grooveshark Enhancement Suite"
    , "description": "A suite of handy modules that improve the Grooveshark experience"
    , "version": "1.2"
    , "background_page": "background.html"
    , "permissions": ["http://lyrics.wikia.com/*", "http://*.grooveshark.com/*"]
    , "content_scripts": [
        {
              "matches": ["http://*.grooveshark.com/*"]
            , "js": [
                  "lib/jquery.min.js"
                , "src/exporter.js"
                , "src/ges_styles.js"
                , "src/ges_events.js"
                , "src/ges_ui.js"
                , "src/ges_modules.js"
                , "src/modules/shortcuts.js"
                , "src/modules/dupe_delete.js"
                , "src/modules/lyrics.js"
                , "src/ges_db.js"
                , "src/ges.js"
                , "contentscript.js"
            ]
        }
    ]
    , "icons":
        {
              "48": "icons/48.png"
            , "128": "icons/128.png"
        }
}
